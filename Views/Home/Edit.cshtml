@model PracticeNa.ViewModels.BudgetViewModel
@using System.Text.Json

@section Styles{
    <link rel="stylesheet" href="~/css/edit.css" />
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Budget Entry</title>
   
</head>
<body>

    <div class="form-container">
        <h1>Edit Budget Entry</h1>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="NewBudget.Id" />

            <div class="form-group">
                <label asp-for="NewBudget.Name"></label>
                <input asp-for="NewBudget.Name" class="form-control" />
                <span asp-validation-for="NewBudget.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewBudget.Amount"></label>
                <input asp-for="NewBudget.Amount" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="NewBudget.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="newCat.Description"></label>
                <input asp-for="newCat.Description" class="form-control" />
                <span asp-validation-for="newCat.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="newCat.Color"></label>
                <input asp-for="newCat.Color" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="newCat.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newCat.Icon"></label>
                <input asp-for="newCat.Icon" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="newCat.Icon" class="text-danger"></span>
            </div>

            <button type="submit" class="btn">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

</body>
</html>
